{
    "compilerOptions": {
        "allowJs": true,
        "noImplicitAny": true,
        "outDir": "./dist/",
        "target": "esnext",
        "declaration": true,
        "module": "esnext",
        "sourceMap": true,
        "moduleResolution": "node",
        "strict": true,
        "rootDir": ".",
        "lib": ["esnext"],
        "resolveJsonModule": true,
	"skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": ["src/**/*"]
}
