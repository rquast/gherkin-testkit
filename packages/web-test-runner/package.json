{
  "name": "@gherkin-testkit/web-test-runner",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "test": "web-test-runner \"src/**/*.test.{js,jsx,ts,tsx}\"",
    "test:integration": "web-test-runner \"src/**/*.steps.{js,jsx,ts,tsx}\" --node-resolve",
    "test:coverage": "web-test-runner \"src/**/*.test.{js,jsx,ts,tsx}\" --coverage"
  },
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^12.1.2",
    "@types/chai": "^4.2.22",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@vitejs/plugin-react": "^1.0.0",
    "@web/test-runner": "^0.13.20",
    "@web/test-runner-playwright": "^0.8.8",
    "chai": "^4.3.4",
    "typescript": "^4.3.2",
    "vite": "^2.6.4",
    "vite-web-test-runner-plugin": "^0.1.0",
    "packages": "*"
  }
}