{
  "name": "gherkin-testkit",
  "version": "0.0.3",
  "description": "A framework agnostic library for implementing Given, When, Then and parsing/validation of Gherkin feature files.",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rquast/gherkin-testkit.git"
  },
  "keywords": [
    "mocha",
    "web test runner",
    "gherkin",
    "cucumber",
    "bdd"
  ],
  "author": "Roland Quast",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/rquast/gherkin-testkit/issues"
  },
  "homepage": "https://github.com/rquast/gherkin-testkit#readme",
  "scripts": {
    "build": "rimraf dist && tsc",
    "dist": "yarn build && npm pack",
    "format": "prettier --write \"src/**/*.{js,ts}\"",
    "lint": "eslint . && prettier --check \"src/**/*.{js,ts}\""
  },
  "devDependencies": {
    "@types/mocha": "^8.2.2",
    "@types/uuid": "^8.3.0",
    "copy-webpack-plugin": "^8.1.1",
    "eslint": "^7.25.0",
    "npm-dts-webpack-plugin": "^1.3.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^9.1.1",
    "typescript": "^4.2.4",
    "webpack": "^5.36.1",
    "webpack-cli": "^4.6.0"
  },
  "dependencies": {
    "@cucumber/gherkin": "^22.0.0"
  }
}